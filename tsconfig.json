{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "lib": ["ESNext"],
    "types": ["node"],
    "sourceMap": false,
    "noEmitOnError": true
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["**/dist", "**/node_modules"]
}